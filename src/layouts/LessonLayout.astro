---
import TreeView from "../components/TreeView.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import type { TreeNode } from "../components/TreeNodeItem.astro";

type TocItem = { depth: number; slug: string; text: string };
type NavItem = { href: string; title: string; description?: string };

const {
  title,
  description = "",
  toc = [],
  tree = [],
  activePath = "",
  prev = null,
  next = null,
} = Astro.props as {
  title: string;
  description?: string;
  toc?: TocItem[];
  tree?: TreeNode[];
  activePath: string;
  prev?: NavItem | null;
  next?: NavItem | null;
};
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;600;700;800&family=Source+Serif+4:ital,opsz,wght@0,8..60,400;0,8..60,600;0,8..60,700;1,8..60,400&family=JetBrains+Mono:wght@400;500&display=swap"
      rel="stylesheet"
    />

    <style is:global>
      :root {
        --border: rgba(255, 255, 255, 0.12);
        --muted: rgba(255, 255, 255, 0.62);
        --bg: #0b0b0f;
        --panel: rgba(255, 255, 255, 0.03);
        --panel2: rgba(255, 255, 255, 0.02);
        --line: rgba(255, 255, 255, 0.1);
        --accent: #f97316;
        --left-w: 320px;
        --right-w: 300px;

        --font-reading: "IBM Plex Sans", system-ui, -apple-system;

        --header-h: 64px;
        --tocbar-h: 52px;

        --surface-blur: blur(12px);
        --surface-dark: rgba(11, 11, 15, 0.8);
        --surface-light: rgba(255, 255, 255, 0.8);
      }

      /* Light theme */
      [data-theme="light"] {
        --border: rgba(0, 0, 0, 0.12);
        --muted: rgba(0, 0, 0, 0.62);
        --bg: #ffffff;
        --panel: rgba(0, 0, 0, 0.03);
        --panel2: rgba(0, 0, 0, 0.02);
        --line: rgba(0, 0, 0, 0.1);
        --accent: #f97316;
      }

      /* Light theme text colors - target body specifically */
      [data-theme="light"] body {
        color: #0f0f0f;
      }

      [data-theme="light"] .brand,
      [data-theme="light"] .brand a {
        color: #0f0f0f;
      }

      [data-theme="light"] .content {
        color: #0f0f0f;
      }

      html {
        scroll-padding-top: 110px; /* Header height (64px) + buffer (16px) */
        scroll-behavior: smooth;
      }

      html,
      body {
        margin: 0;
        background: var(--bg);
        color: #f3f3f3;
        font-family: var(--font-reading);
      }

      /* lock background scroll while overlay open */
      html.noScroll {
        overflow: hidden !important;
      }

      a {
        color: inherit;
        text-decoration: none;
      }

      /* LAYOUT - 3 COLUMN GRID */
      .shell {
        display: grid;
        grid-template-columns: var(--left-w) minmax(0, 1fr) var(--right-w);
        gap: 0;
        align-items: start;
        min-height: calc(100vh - 64px);
      }

      /* CRITICAL: prevent grid children from forcing the grid wider */
      .shell > aside,
      .shell > main {
        min-width: 0;
      }

      /* SIDEBARS */
      aside {
        background: var(--panel2);
        min-height: 100%;
      }

      .left {
        border-right: 1px solid var(--border);
      }

      .right {
        border-left: 1px solid var(--border);
      }

      .asideSticky {
        position: sticky;
        top: 64px;
        height: calc(100vh - 64px);
        overflow: auto;
        padding: 14px 14px 18px;
        box-sizing: border-box;
      }

      /* MAIN CONTENT */
      main {
        padding: 18px 22px 80px;
        box-sizing: border-box;
      }

      .content :global(h1) {
        margin-top: 0;
      }

      .content :global(h2) {
        margin-top: 26px;
      }

      .content :global(code) {
        padding: 2px 6px;
        border-radius: 8px;
      }

      .content :global(pre) {
        padding: 12px;
        border-radius: 12px;
        overflow: auto;
      }

      /* HORIZONTAL DIVIDERS */
      .content hr {
        margin: 40px 0;
        border: none;
        height: 1px;
        background: linear-gradient(
          to right,
          transparent,
          rgba(255, 255, 255, 0.12) 20%,
          rgba(255, 255, 255, 0.12) 80%,
          transparent
        );
      }

      [data-theme="light"] .content hr {
        background: linear-gradient(
          to right,
          transparent,
          rgba(0, 0, 0, 0.12) 20%,
          rgba(0, 0, 0, 0.12) 80%,
          transparent
        );
      }

      /* TABLES */
      .content table {
        width: 100%;
        border-collapse: collapse;
        margin: 24px 0;
        font-size: 14px;
        line-height: 1.5;
        border: 2px solid var(--border);
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      }

      [data-theme="light"] .content table {
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
      }

      .content thead {
        background: var(--panel);
        border-bottom: 2px solid var(--border);
      }

      .content th {
        padding: 14px 18px;
        text-align: left;
        font-weight: 700;
        color: #fff;
        border-right: 1.5px solid var(--border);
      }

      [data-theme="light"] .content th {
        color: #0f0f0f;
      }

      .content th:last-child {
        border-right: none;
      }

      .content td {
        padding: 12px 18px;
        border-right: 1.5px solid var(--border);
        border-bottom: 1px solid var(--border);
      }

      .content td:last-child {
        border-right: none;
      }

      .content tbody tr:last-child td {
        border-bottom: none;
      }

      .content tbody tr {
        transition: background 0.15s ease;
      }

      .content tbody tr:hover {
        background: var(--panel);
      }

      /* Emphasis on left and right edges */
      .content table td:first-child,
      .content table th:first-child {
        border-left: 2px solid var(--border);
        padding-left: 18px;
      }

      .content table td:last-child,
      .content table th:last-child {
        border-right: 2px solid var(--border);
        padding-right: 18px;
      }

      /* Responsive tables - scroll on mobile */
      @media (max-width: 768px) {
        .content .tableWrap {
          position: relative;
          overflow-x: auto;
          overflow-y: hidden;
          -webkit-overflow-scrolling: touch;
          padding-bottom: 28px;
        }

        .content .tableWrap table {
          width: max-content;
          min-width: 100%;
          /*white-space: nowrap;*/
        }

        .content .tableWrap[data-scroll-hint="on"]::after {
          content: "→";
          position: absolute;
          right: 10px;
          bottom: 10px;
          z-index: 5;

          padding: 6px 10px;
          border-radius: 999px;
          background: rgba(249, 115, 22, 0.14);
          border: 1px solid rgba(249, 115, 22, 0.25);

          color: var(--muted);
          font-size: 12px;
          font-weight: 700;
          letter-spacing: 0.2px;
          pointer-events: none;
          backdrop-filter: blur(6px);
        }
      }

      /* SIDEBAR TITLES */
      .side-title {
        color: #fff;
        font-weight: 800;
        margin: 0 0 6px;
      }

      [data-theme="light"] .side-title {
        color: #0f0f0f;
      }

      .side-sub {
        margin: 0 0 12px;
        color: var(--muted);
        font-size: 13px;
      }

      /* LEFT TREE NAVIGATION */
      .tree {
        list-style: none;
        margin: 0;
        padding: 0;
      }

      .tree ul {
        list-style: none;
        margin: 0;
        padding-left: 18px;
        position: relative;
      }

      .tree ul::before {
        content: "";
        position: absolute;
        top: 0;
        bottom: 0;
        left: 8px;
        width: 1px;
        background: var(--line);
      }

      .tree li {
        padding: 2px 0;
      }

      .node {
        display: inline-flex;
        align-items: center;
        padding: 4px 0;
        font-size: 13px;
        line-height: 1.25;
        color: var(--muted);
        transition: color 0.14s ease;
      }

      .node:hover {
        color: #fff;
      }

      [data-theme="light"] .node:hover {
        color: #0f0f0f;
      }

      .node.active {
        color: var(--accent);
        font-weight: 700;
      }

      .navhead {
        color: #fff;
        font-weight: 800;
        cursor: default;
      }

      [data-theme="light"] .navhead {
        color: #0f0f0f;
      }

      .navhead:hover {
        color: #fff;
      }

      [data-theme="light"] .navhead:hover {
        color: #0f0f0f;
      }

      /* RIGHT TABLE OF CONTENTS */
      .toc a {
        display: block;
        padding: 4px 0;
        font-size: 13px;
        line-height: 1.25;
        color: var(--muted);
        transition: color 0.14s ease;
        position: relative;
      }

      .toc a:hover {
        color: #fff;
      }

      [data-theme="light"] .toc a:hover {
        color: #0f0f0f;
      }

      .toc a.active {
        color: var(--accent);
        font-weight: 700;
      }

      .toc a.d2 {
        padding-left: 0px;
      }

      .toc a.d3 {
        padding-left: 18px;
      }

      .toc a.d4 {
        padding-left: 36px;
      }

      .toc a.d3::before,
      .toc a.d4::before {
        content: "";
        position: absolute;
        left: 8px;
        top: 0;
        bottom: 0;
        width: 1px;
        background: var(--line);
      }

      .toc a.d4::after {
        content: "";
        position: absolute;
        left: 26px;
        top: 0;
        bottom: 0;
        width: 1px;
        background: var(--line);
      }

      /* PREV / NEXT PAGINATION */
      .pager {
        margin-top: 90px;
        padding-top: 28px;
        border-top: 1px solid var(--border);
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 16px;

        align-items: stretch;
      }

      .pagerCard {
        position: relative;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        gap: 8px;

        border: 1px solid var(--border);
        border-radius: 18px;

        min-height: 160px;
        padding: 72px 20px 22px; /* space for arrow */

        background: var(--panel);
        color: var(--muted);

        transition:
          transform 0.15s ease,
          background 0.15s ease,
          border-color 0.15s ease,
          color 0.15s ease;
      }

      @media (max-width: 520px) {
        .pagerCard {
          padding-top: 80px;
          min-height: 180px;
        }
      }

      .pagerCard.prev {
        align-items: flex-start;
        text-align: left;
        --dir: -2px;
      }

      .pagerCard.next {
        align-items: flex-end;
        text-align: right;
        --dir: 2px;
      }

      .pagerCard:hover {
        transform: translateY(-1px);
        background: rgba(255, 255, 255, 0.05);
        border-color: rgba(255, 255, 255, 0.18);
        color: #fff;
      }

      [data-theme="light"] .pagerCard:hover {
        background: rgba(0, 0, 0, 0.05);
        border-color: rgba(0, 0, 0, 0.18);
        color: #0f0f0f;
      }

      .pagerMeta {
        width: 100%;
        display: flex;
        flex-direction: column;
        gap: 6px;
      }

      .pagerArrow {
        position: absolute;
        top: 16px;
        width: 38px;
        height: 38px;
        border-radius: 999px;
        border: 1px solid rgba(255, 255, 255, 0.18);
        background: var(--panel);
        display: flex;
        align-items: center;
        justify-content: center;
        transition:
          border-color 0.15s ease,
          background 0.15s ease,
          transform 0.15s ease;
      }

      [data-theme="light"] .pagerArrow {
        border-color: rgba(0, 0, 0, 0.18);
      }

      .pagerCard.prev .pagerArrow {
        left: 16px;
      }

      .pagerCard.next .pagerArrow {
        right: 16px;
      }

      .pagerArrow svg {
        width: 18px;
        height: 18px;
        stroke: currentColor;
        stroke-width: 2.25;
        fill: none;
        color: var(--muted);
        transition:
          color 0.15s ease,
          transform 0.15s ease;
      }

      .pagerCard:hover .pagerArrow {
        border-color: var(--accent);
        background: rgba(249, 115, 22, 0.12);
      }

      .pagerCard:hover .pagerArrow svg {
        color: var(--accent);
        transform: translateX(var(--dir));
      }

      .pagerLabel {
        font-size: 12px;
        color: var(--muted);
        margin-bottom: 6px;
      }

      .pagerTitle {
        font-size: 15px;
        font-weight: 700;
        color: #fff;
        line-height: 1.25;
      }

      [data-theme="light"] .pagerTitle {
        color: #0f0f0f;
      }

      .pagerDesc {
        margin-top: 2px;
        font-size: 13px;
        line-height: 1.35;
        color: var(--muted);
        max-width: 42ch;
      }

      .pagerCard.next .pagerDesc {
        margin-left: auto;
      }
      /* prevent from too long titles and descriptions */
      /*
      .pagerTitle {
        font-size: 15px;
        font-weight: 700;
        line-height: 1.25;

        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
      }

      .pagerDesc {
        font-size: 13px;
        line-height: 1.35;
        max-width: 42ch;

        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
      }
      */

      /* RESPONSIVE */
      @media (max-width: 1040px) {
        .shell {
          grid-template-columns: 1fr;
        }

        .left,
        .right {
          border: 0;
        }

        .asideSticky {
          position: static;
          height: auto;
        }
      }

      /* EXPAND MODE - full width content, hide sidebars */
      html.expanded .shell {
        grid-template-columns: 0px minmax(0, 1fr) 0px !important;
      }

      html.expanded aside.left,
      html.expanded aside.right {
        opacity: 0;
        visibility: hidden;
        overflow: hidden;
        pointer-events: none;
        width: 0;
        padding: 0;
        border: none;
      }

      html.expanded aside.left .asideSticky,
      html.expanded aside.right .asideSticky {
        padding: 0;
        overflow: hidden;
      }

      html.expanded main {
        max-width: 100%;
        width: 100%;
        padding: 18px 48px 80px;
      }

      /* Smooth transitions for expand/collapse */
      .shell {
        transition: grid-template-columns 0.3s ease;
      }

      aside.left,
      aside.right {
        transition:
          opacity 0.25s ease,
          visibility 0.25s ease,
          width 0.3s ease,
          padding 0.3s ease;
      }

      /* MDX links ONLY (won't touch pager, tree, toc, etc.) */
      .mdx a[href] {
        color: inherit;
      }

      /* underline only normal content links, not headings */
      .mdx :not(h1):not(h2):not(h3):not(h4):not(h5):not(h6) > a[href] {
        text-decoration: none;
        padding-bottom: 2px;
        background-image: linear-gradient(
          rgba(249, 115, 22, 0.55),
          rgba(249, 115, 22, 0.55)
        );
        background-repeat: no-repeat;
        background-size: 100% 1.5px;
        background-position: 0 100%;
      }

      .mdx :not(h1):not(h2):not(h3):not(h4):not(h5):not(h6) > a[href]:hover {
        background-color: rgba(249, 115, 22, 0.12);
        border-radius: 6px;
        background-image: linear-gradient(var(--accent), var(--accent));
      }

      /* headings that are links should look like headings */
      .mdx h1 a,
      .mdx h2 a,
      .mdx h3 a,
      .mdx h4 a,
      .mdx h5 a,
      .mdx h6 a {
        color: inherit;
        text-decoration: none;
        background: none;
      }

      /* don't mess with code blocks */
      .mdx pre a,
      .mdx code a {
        color: inherit;
        text-decoration: none;
        background: none;
      }

      /* Content safety: never overflow the column */
      .content,
      .mdx,
      .mdx * {
        min-width: 0;
      }

      .mdx pre,
      .mdx code {
        max-width: 100%;
      }

      .mdx pre {
        overflow: auto;
      }

      /* REVEAL TRANSLATIONS */
      .translation {
        display: inline-block;
        padding: 2px 8px;
        margin-left: 8px;
        border-radius: 6px;
        background: var(--panel);
        border: 1px solid var(--border);
        color: transparent;
        text-shadow: 0 0 8px rgba(255, 255, 255, 0.3);
        transition: all 0.3s ease;
        font-style: italic;
        font-size: 0.95em;
        cursor: pointer;
        user-select: none;
      }

      .translation::before {
        content: "";
        opacity: 0.4;
        margin-right: 4px;
        font-size: 0.9em;
      }

      .translation.revealed {
        color: var(--muted);
        text-shadow: none;
        background: rgba(249, 115, 22, 0.1);
        border-color: rgba(249, 115, 22, 0.3);
      }

      .translation.revealed::before {
        content: "";
        margin-right: 0;
      }

      .translation:not(.revealed):hover {
        background: rgba(249, 115, 22, 0.08);
        border-color: rgba(249, 115, 22, 0.2);
      }

      /* ===== overlays (GLOBAL) ===== */
      .overlay {
        position: fixed;
        inset: 0;
        z-index: 999;
        display: none;
        background: rgba(0, 0, 0, 0.55);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
      }

      [data-theme="light"] .overlay {
        background: rgba(0, 0, 0, 0.35);
      }

      .overlay.open {
        display: block;
      }

      .overlayPanel {
        position: absolute;
        inset: 0;
        background: var(--bg);
        display: flex;
        flex-direction: column;
      }

      .overlayTop {
        height: 64px;
        padding: 0 16px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        border-bottom: 1px solid var(--border);
      }

      .overlayTitle {
        font-weight: 800;
      }

      .closeBtn {
        background: none;
        border: 1px solid var(--border);
        border-radius: 10px;
        padding: 8px;
        color: var(--muted);
      }

      .overlayBody {
        padding: 14px 14px 24px;
        overflow: auto;
        -webkit-overflow-scrolling: touch;
      }

      @media (max-width: 1040px) {
        aside.left,
        aside.right {
          display: none;
        }
      }

      /* Hide mobile TOC UI by default (desktop) */
      .mobileTocBar,
      .tocDropBackdrop {
        display: none;
      }

      /* Show only on mobile/tablet widths */
      @media (max-width: 1040px) {
        .mobileTocBar {
          display: block;
          position: sticky;
          top: var(--header-h);
          z-index: 9;
          border-bottom: 1px solid var(--border);
          background: var(--surface-dark);
          backdrop-filter: var(--surface-blur);
          -webkit-backdrop-filter: var(--surface-blur);
          margin-top: 0;
        }

        [data-theme="light"] .mobileTocBar {
          background: var(--surface-light);
        }

        .tocBtn {
          width: 100%;
          display: flex;
          align-items: center;
          justify-content: space-between;
          gap: 10px;
          padding: 12px 16px;
          background: none;
          border: none;
          color: inherit;
          font-weight: 800;
          font-size: 14px;
          cursor: pointer;
        }

        .tocBtn .chev {
          width: 18px;
          height: 18px;
          stroke-width: 2.5;
          color: var(--muted);
          transition: transform 0.18s ease;
        }

        .tocBtn[aria-expanded="true"] .chev {
          transform: rotate(180deg);
        }

        .tocDropBackdrop {
          position: fixed;
          left: 0;
          right: 0;
          top: calc(var(--header-h) + var(--tocbar-h, 46px) - 10px);
          bottom: 0;
          z-index: 8;
          display: none;
          background: transparent;
        }

        .tocDropBackdrop.open {
          display: block;
        }

        .tocDrop {
          position: absolute;
          top: 0;
          left: 0;
          right: 0;
          bottom: 0;
          background: var(--bg);
          display: flex;
          flex-direction: column;
        }

        .tocDropBody {
          flex: 1;
          overflow: auto;
          -webkit-overflow-scrolling: touch;
          padding: 14px 16px 24px;
        }
      }

      /* Remove tap highlight on mobile */
      a,
      button,
      .tocBtn,
      .toc a,
      .node,
      .pagerCard,
      .translation,
      .menuBtn,
      .expandBtn,
      .themeToggle,
      .navLink,
      .closeBtn,
      .tocCloseBtn {
        -webkit-tap-highlight-color: transparent;
      }
    </style>
  </head>

  <script>
    // Reveal translation on click
    document.addEventListener("click", (e) => {
      const target = e.target as HTMLElement;
      if (target.classList.contains("translation")) {
        target.classList.toggle("revealed");
      }
    });
  </script>

  <body>
    <Header showExpand={true} />

    <!-- Mobile "On this page" bar -->
    <div class="mobileTocBar">
      <button class="tocBtn" id="tocToggleBtn" aria-expanded="false">
        <span>On this page</span>
        <svg class="chev" viewBox="0 0 24 24" fill="none" stroke="currentColor">
          <path d="M6 9l6 6 6-6"></path>
        </svg>
      </button>
    </div>

    <!-- TOC dropdown backdrop -->
    <div class="tocDropBackdrop" id="tocDropBackdrop">
      <div class="tocDrop">
        <div class="tocDropBody">
          <div class="toc" id="mobileToc">
            {
              toc.length === 0 ? (
                <div class="muted">No headings found.</div>
              ) : (
                toc
                  .filter((h) => h.depth >= 2 && h.depth < 5)
                  .map((h) => (
                    <a
                      class={`d${h.depth}`}
                      href={`#${h.slug}`}
                      data-toc={`#${h.slug}`}
                    >
                      {h.text}
                    </a>
                  ))
              )
            }
          </div>
        </div>
      </div>
    </div>

    <div class="shell">
      <!-- LEFT SIDEBAR -->
      <aside class="left">
        <div class="asideSticky">
