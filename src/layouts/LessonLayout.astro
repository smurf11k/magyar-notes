    <!-- Expand toggle script - use is:inline to avoid Astro hoisting -->
    <script is:inline>
      (function () {
        var STORAGE_KEY = "magyar-notes-expanded";

        // Restore saved state immediately
        if (localStorage.getItem(STORAGE_KEY) === "true") {
          document.documentElement.classList.add("expanded");
        }

        var btn = document.getElementById("expandBtn");
        if (btn) {
          btn.addEventListener("click", function () {
            var isExpanded =
              document.documentElement.classList.toggle("expanded");
            localStorage.setItem(STORAGE_KEY, String(isExpanded));
          });
        } else {
          // If button not found yet, wait for DOM
          document.addEventListener("DOMContentLoaded", function () {
            var btn2 = document.getElementById("expandBtn");
            if (!btn2) return;
            btn2.addEventListener("click", function () {
              var isExpanded =
                document.documentElement.classList.toggle("expanded");
              localStorage.setItem(STORAGE_KEY, String(isExpanded));
            });
          });
        }
      })();
    </script>

    <!-- Auto-highlight active TOC section -->
    <script>
      (() => {
        const tocDesktop = document.getElementById("toc");
        const tocMobile = document.getElementById("mobileToc");

        const containers = [tocDesktop, tocMobile].filter(
          (x): x is HTMLElement => x instanceof HTMLElement,
        );
        if (containers.length === 0) return;

        const allLinks = containers.flatMap((c) =>
          Array.from(c.querySelectorAll<HTMLAnchorElement>("a[href^='#']")),
        );
        if (allLinks.length === 0) return;

        // id -> links (desktop + mobile)
        const byId = new Map<string, HTMLAnchorElement[]>();
        for (const a of allLinks) {
          const hash = a.getAttribute("href") || "";
          const id = hash.startsWith("#") ? hash.slice(1) : "";
          if (!id) continue;

          const arr = byId.get(id) || [];
          arr.push(a);
          byId.set(id, arr);
        }

        const headings = Array.from(
          document.querySelectorAll<HTMLElement>("h2[id], h3[id], h4[id]"),
        ).filter((h) => byId.has(h.id));

        if (headings.length === 0) return;

        let currentActiveId = "";
        let isScrollingFromClick = false;
        let scrollTimeout: number | undefined;

        const setActive = (id: string) => {
          if (currentActiveId === id) return;
          currentActiveId = id;

          allLinks.forEach((a) => a.classList.remove("active"));
          const match = byId.get(id);
          if (match) match.forEach((a) => a.classList.add("active"));
        };

        const getActiveIdByScroll = () => {
          const scrollTop = window.scrollY;
          const triggerPoint = scrollTop + 150;

          let active = headings[0];
          for (const h of headings) {
            const top = h.getBoundingClientRect().top + scrollTop;
            if (top <= triggerPoint) active = h;
            else break;
          }
          return active?.id || headings[0].id;
        };

        const updateActiveHeading = () => {
          if (isScrollingFromClick) return;
          setActive(getActiveIdByScroll());
        };

        // init
        const initial = location.hash ? location.hash.slice(1) : "";
        if (initial && byId.has(initial)) setActive(initial);
        else setActive(getActiveIdByScroll());

        // scroll listener (rAF)
        let rafId: number | null = null;
        window.addEventListener(
          "scroll",
          () => {
            if (rafId !== null) return;
            rafId = requestAnimationFrame(() => {
              updateActiveHeading();
              rafId = null;
            });
          },
          { passive: true },
        );

        const onTocClick = (e: Event) => {
          const t = e.target;
          if (!(t instanceof Element)) return;

          const a = t.closest("a[href^='#']");
          if (!(a instanceof HTMLAnchorElement)) return;

          const hash = a.getAttribute("href") || "";
          const id = hash.slice(1);
          const targetEl = document.getElementById(id);
          if (!targetEl) return;

          e.preventDefault();

          // if click came from mobile toc, close the dropdown
          const backdrop = document.getElementById("pageTocBackdrop");
          if (backdrop?.classList.contains("open")) {
            backdrop.classList.remove("open");
            document.documentElement.classList.remove("noScroll");
            document.body.classList.remove("noScroll");

            const btn = document.getElementById("pageTocBtn");
            btn?.setAttribute("aria-expanded", "false");
            backdrop.setAttribute("aria-hidden", "true");
          }

          isScrollingFromClick = true;
          if (scrollTimeout) window.clearTimeout(scrollTimeout);

          setActive(id);
          targetEl.scrollIntoView({ behavior: "smooth", block: "start" });
          history.pushState(null, "", hash);

          scrollTimeout = window.setTimeout(() => {
            isScrollingFromClick = false;
            updateActiveHeading();
          }, 700);
        };

        // handle clicks in BOTH TOCs
        containers.forEach((c) => c.addEventListener("click", onTocClick));

        // keep active if user lands by hash change
        window.addEventListener("hashchange", () => {
          const id = location.hash.slice(1);
          if (!id || !byId.has(id)) return;
          setActive(id);
        });
      })();
    </script>

    <script>
      (() => {
        const tables = Array.from(
          document.querySelectorAll<HTMLTableElement>(".content table"),
        );

        for (const t of tables) {
          // wrap (strict-safe)
          if (!t.parentElement) continue;
          if (!t.parentElement.classList.contains("tableWrap")) {
            const wrap = document.createElement("div");
            wrap.className = "tableWrap";

            const parent = t.parentNode;
            if (!parent) continue; // strict TS + runtime safety

            parent.insertBefore(wrap, t);
            wrap.appendChild(t);
          }

          const wrap = t.parentElement;
          if (!(wrap instanceof HTMLDivElement)) continue;

          // decide if scroll hint is needed (compare wrapper width vs table width)
          const isScrollable = t.scrollWidth > wrap.clientWidth + 2;
          if (!isScrollable) continue;

          wrap.setAttribute("data-scroll-hint", "on");

          const onScroll = () => {
            if (wrap.scrollLeft > 8) {
              wrap.removeAttribute("data-scroll-hint");
              wrap.removeEventListener("scroll", onScroll);
            }
          };

          wrap.addEventListener("scroll", onScroll, { passive: true });
        }
      })();
    </script>

    <script>
      (() => {
        const body = document.getElementById("lessonsOverlayBody");
        const source = document.querySelector(".left .asideSticky");

        if (!(body instanceof HTMLElement) || !(source instanceof HTMLElement))
