    <!-- Mobile TOC toggle -->
    <script is:inline>
      (function () {
        var tocBtn = document.getElementById("tocToggleBtn");
        var backdrop = document.getElementById("tocDropBackdrop");
        if (!tocBtn || !backdrop) return;

        var lockScroll = function (on) {
          document.documentElement.classList.toggle("noScroll", on);
          document.body.classList.toggle("noScroll", on);
        };

        var openToc = function () {
          backdrop.classList.add("open");
          tocBtn.setAttribute("aria-expanded", "true");
          lockScroll(true);
        };

        var closeToc = function () {
          backdrop.classList.remove("open");
          tocBtn.setAttribute("aria-expanded", "false");
          lockScroll(false);
        };

        tocBtn.addEventListener("click", function () {
          if (backdrop.classList.contains("open")) closeToc();
          else openToc();
        });

        backdrop.addEventListener("click", function (e) {
          if (e.target === backdrop) closeToc();
        });

        var links = backdrop.querySelectorAll("a");
        for (var i = 0; i < links.length; i++) {
          links[i].addEventListener("click", function () {
            closeToc();
          });
        }

        document.addEventListener("keydown", function (e) {
          if (e.key === "Escape" && backdrop.classList.contains("open"))
            closeToc();
        });

        window.addEventListener("resize", function () {
          if (window.matchMedia("(min-width: 1041px)").matches) closeToc();
        });

        // Active heading tracking — same logic for both desktop and mobile TOC
        var headingEls = [];
        var mobileTocLinks = document.querySelectorAll("[data-toc-link]");
        // Also grab desktop sidebar TOC links if they exist
        var desktopTocLinks = document.querySelectorAll(
          ".right .asideSticky a[href^='#']",
        );

        mobileTocLinks.forEach(function (link) {
          var id = link.getAttribute("data-toc-link");
          var el = document.getElementById(id);
          if (el) headingEls.push({ id: id, el: el });
        });

        if (headingEls.length === 0) return;

        var currentActive = null;

        function updateActive() {
          var found = null;
          for (var i = headingEls.length - 1; i >= 0; i--) {
            var rect = headingEls[i].el.getBoundingClientRect();
            if (rect.top <= 120) {
              found = headingEls[i].id;
              break;
            }
          }
          if (!found) found = headingEls[0].id;
          if (found === currentActive) return;
          currentActive = found;

          // Update mobile TOC
          mobileTocLinks.forEach(function (link) {
            if (link.getAttribute("data-toc-link") === found) {
              link.classList.add("active");
            } else {
              link.classList.remove("active");
            }
          });

          // Update desktop TOC if present
          desktopTocLinks.forEach(function (link) {
            if (link.getAttribute("href") === "#" + found) {
              link.classList.add("active");
            } else {
              link.classList.remove("active");
            }
          });
        }

        window.addEventListener("scroll", updateActive, { passive: true });
        updateActive();
      })();
    </script>
